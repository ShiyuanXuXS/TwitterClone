@{
    int indexDropDown = (int)ViewData["IndexDropDown"];
}

<div class="input-group d-flex align-items-center px-2">
    <input type="search" class="searchInput form-control rounded rounded-pill bg-light" data-bs-toggle="dropdown"
        aria-expanded="false" placeholder="Search" aria-label="Search" aria-describedby="search-addon">
    <div class="dropdown-menu text-center" style="max-width: 245px;">
        @if (indexDropDown == 1)
        {
            <p class="fs-6 p-1 fw-lighter mb-0">Try searching for people, lists, or keywords</p>
        }
        else
        {
            <p class="fs-6 p-1 fw-lighter mb-0">Try searching for tags</p>
        }
    </div>
    <a type="button" class="btnSearch ps-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black" class="bi bi-search-heart"
            viewBox="0 0 16 16">
            <path d="M6.5 4.482c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.69 0-5.018" />
            <path
                d="M13 6.5a6.471 6.471 0 0 1-1.258 3.844c.04.03.078.062.115.098l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1.007 1.007 0 0 1-.1-.115h.002A6.5 6.5 0 1 1 13 6.5M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11" />
        </svg>
    </a>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.btnSearch').click(function () {
            // Get the value from the search input
            if (@ViewData["IndexDropdown"] == 1) {
                var searchTerm = $('.searchInput').val();
                window.location.href = '/SearchResult/?term=' + encodeURIComponent(searchTerm);
            }
        });
    });
</script>
