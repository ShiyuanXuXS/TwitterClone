    <div class="d-flex flex-column flex-shrink-0 bg-body-teritiary">
        <ul class="nav nav-pills nav-flush flex-column mb-auto mt-4">
            @* <li class="mb-3">
            <div class="border rounded px-3">
            <p class="fs-5 fw-bold mb-0 py-2">Search Filters</p>
            </div>

            </li>
            <li class="mb-3 ">
