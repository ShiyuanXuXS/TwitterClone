@page
@model TwitterClone.Pages.SearchResultModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var allSearchedUser = Model.AllSearchedUser;
    var displayUser = Model.SearchedUser;
    int indexPeople = Model.indexPeople;
    int indexTweet = Model.indexTweet;
}

<div class="col-8">
    <div class="p-2 px-3 border-end border-start">
        <div class="d-flex align-items-center p-2 mb-3">
            <div class="">
                <a class="btnBackToMain" asp-page="/Main">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black"
                        class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                        <path
                            d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                    </svg>
                </a>
            </div>
            <partial name="_PartialSearch" />
        </div>
        <div>
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <form method="post" asp-page-handler="ShowTweetAndUser" name="ShowTweetAndUserForm">
                        <input type="hidden" value="@ViewData["SearchTerm"]" />
                        <button type="submit" style="display:none;"></button>
                        <a id="peopleTweetLink" class="nav-link fs-5" onclick="submitShowTweetAndUserForm()">Top</a>
                    </form>
                </li>
                <li class="nav-item">
                    <form method="post" asp-page-handler="ShowAllPeople" name="showAllPeopleForm">
                        <input type="hidden" value="@ViewData["SearchTerm"]" />
                        <button type="submit" style="display:none;"></button>
                        <a id="userLink" class="nav-link fs-5" onclick="submitShowAllPeopleForm()">People</a>
                    </form>
                </li>
                </li>
                <li class="nav-item">
                    <form method="post" asp-page-handler="ShowAllTweet" name="showAllTweetForm">
                        <input type="hidden" value="@ViewData["SearchTerm"]" />
                        <button type="submit" style="display:none;"></button>
                        <a id="TweetLink" class="nav-link fs-5" onclick="submitShowAllTweetForm()">Media</a>
                    </form>

                </li>
            </ul>
        </div>
        @if (indexTweet == 0 || indexPeople == 1)
        {
            <div class="p-2">
                <p class="fs-5 fw-bold mt-3 mb-0">People</p>
                @if (displayUser != null && displayUser.Any())
                {
                    <ul class="nav flex-column">
                        @foreach (var user in displayUser)
                        {
                            <li class="mb-2 d-flex align-items-center p-2 ps-0">
                                <div class="fs-6">
                                    <img src="@user.Avatar" alt="avatar" width="32" height="32" class="rounded-circle">
                                </div>
                                <div class="names fs-6 ps-2">
                                    <div class="fw-bold">@user.NickName</div>
                                    <div>&#64;@user.UserName</div>
                                    <div>@user.Description</div>
                                </div>
                                <div class="ms-auto">
                                    <button class="btnFollowSearch btn btn-dark btn-sm rounded rounded-pill fw-bold"
                                        data-user-id="@user.Id">Follow</button>
                                </div>
                            </li>
                        }
                        <li class="mt-2">
                            @if (indexPeople == 1)
                            {
                                <button type="button" class="btn btn-link fs-6 no-underline ps-0" id="BtnShowMorePeople"
                                    onclick="submitshowAllPeopleForm()">Show
                                    more </button>
                            }
                        </li>
                    </ul>
                }
                else
                {
                    <div class="d-flex mt-3 mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-emoji-dizzy" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path
                                d="M9.146 5.146a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708m-5 0a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 1 1 .708.708l-.647.646.647.646a.5.5 0 1 1-.708.708L5.5 7.207l-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708zM10 11a2 2 0 1 1-4 0 2 2 0 0 1 4 0" />
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-emoji-dizzy" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path
                                d="M9.146 5.146a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708m-5 0a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 1 1 .708.708l-.647.646.647.646a.5.5 0 1 1-.708.708L5.5 7.207l-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708zM10 11a2 2 0 1 1-4 0 2 2 0 0 1 4 0" />
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-emoji-dizzy" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path
                                d="M9.146 5.146a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708m-5 0a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 1 1 .708.708l-.647.646.647.646a.5.5 0 1 1-.708.708L5.5 7.207l-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708zM10 11a2 2 0 1 1-4 0 2 2 0 0 1 4 0" />
                        </svg>
                    </div>
                    <p class="fw-bold fs-6 my-0">No results</p>
                    <p class="fs-6 mt-0">Try different keywords.</p>
                }
            </div>
            <hr>
        }
        @if (indexPeople == 1 || indexTweet == 1)
        {
            <div class="p-2">
                <p class="fs-5 fw-bold mt-3 mb-0">Tweets</p>
                @* <partial name="_TweetCard" model="@Model.SearchedTweet" /> *@
            </div>
        }

    </div>
</div>

