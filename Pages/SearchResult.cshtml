@page
@model TwitterClone.Pages.SearchResultModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="col-8">
    <div class="p-2 px-3 border-end border-start">
        <div class="d-flex align-items-center p-2 mb-3">
            <div class="">
                <a class="btnBackToMain" asp-page="/Main">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black"
                        class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                        <path
                            d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                    </svg>
                </a>
            </div>
            <partial name="_PartialSearch" />
        </div>
        <div>
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active fs-5" aria-current="page" href="#">Top</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled fs-5" aria-disabled="true">People</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled fs-5" aria-disabled="true">Media</a>
                </li>
            </ul>
        </div>
        <div class="p-2">
            <p class="fs-5 fw-bold mt-3 mb-0">People</p>
            @if (Model.SearchedUser != null && Model.SearchedUser.Any())
            {
                <ul class="nav flex-column">
                    @foreach (var user in Model.SearchedUser)
                    {
                        <li class="mb-2 d-flex align-items-center p-2 ps-0">
                            <div class="fs-6"> <img src="@user.Avatar" alt="avatar" width="32" height="32"
                                    class="rounded-circle"></div>
                            <div class="names fs-6 ps-2">
                                <div class="fw-bold">@user.NickName</div>
                                <div>&#64;@user.UserName</div>
                            </div>
                            <div class="ms-auto">
                                <button class="btnFollow btn btn-dark btn-sm rounded rounded-pill fw-bold"
                                    data-user-id="@user.Id">Follow</button>
                            </div>
                        </li>
                    }
                    <li class="mt-2">
                        <button type="button" class="btnShowMoreFollow btn btn-link fs-6 no-underline ps-0">Show
                            more</button>
                    </li>
                </ul>
            }
            else
            {
                <div class="d-flex mt-3 mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="currentColor" class="bi bi-emoji-dizzy" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path
                            d="M9.146 5.146a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708m-5 0a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 1 1 .708.708l-.647.646.647.646a.5.5 0 1 1-.708.708L5.5 7.207l-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708zM10 11a2 2 0 1 1-4 0 2 2 0 0 1 4 0" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-emoji-dizzy" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path
                            d="M9.146 5.146a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708m-5 0a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 1 1 .708.708l-.647.646.647.646a.5.5 0 1 1-.708.708L5.5 7.207l-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708zM10 11a2 2 0 1 1-4 0 2 2 0 0 1 4 0" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-emoji-dizzy" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path
                            d="M9.146 5.146a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708m-5 0a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 1 1 .708.708l-.647.646.647.646a.5.5 0 1 1-.708.708L5.5 7.207l-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708zM10 11a2 2 0 1 1-4 0 2 2 0 0 1 4 0" />
                    </svg>
                </div>

                <p class="fw-bold fs-6 my-0">No results</p>
                <p class="fs-6 mt-0">Try different keywords.</p>
            }
        </div>
    </div>
</div>

<div class="col-4">
    <div class="d-flex flex-column flex-shrink-0 bg-body-teritiary">
        <ul class="nav nav-pills nav-flush flex-column mb-auto mt-4">
            <li class="mb-3">
                <div class="border rounded px-3">
                    <p class="fs-5 fw-bold mb-0 py-2">Search Filters</p>
                </div>
                @* search filters/advanced search *@
            </li>
            <li class="mb-3 ">
                <div class="border rounded px-3">
                    <p class="fs-6 fw-bold mb-0 pt-2">Pepole</p>
                    <div class="py-2">
                        <div class="d-flex">
                            <label class="fs-6">From anyone</label>
                            <input type="radio" class="ms-auto" name="searchOption" />
                        </div>
                        <div class="d-flex">
                            <label class="fs-6">People you follow</label>
                            <input type="radio" class="ms-auto" name="searchOption" />
                        </div>
                    </div>
                </div>

            </li>
            <li class="mb-3">
                <div class="bg-light rounded p-2 px-3">
                    <p class="fs-5 mb-4 fw-bold">What's happening</p>
                    <ul class="nav flex-column">
                        <li class="mb-2">
                            <a asp-page="#" class="text-dark text-decoration-none fs-6">
                                <strong>Hot tags</strong>
                            </a>
                            <p class="fs-6 mb-0 fw-lighter"><span class="fw-lighter">No.</span> Posts</p>
                        </li>
                        <li class="mt-2">
                            <button type="button" class="btn btn-link fs-6 no-underline ps-0">Show
                                more</button>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="mb-3">
                @await Component.InvokeAsync("WhoToFollow")
            </li>
            <li class="mb-3 fs-6 p-2 text-center">

                &copy; 2023 - Y - ShiYuan Xu, Meredith White, Xiaoxing Pan, All rights reserved.
            </li>
        </ul>
    </div>